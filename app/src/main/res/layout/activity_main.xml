<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyAppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pervasive.sth.smarttreasurehunt.MainActivity"
    android:background="@color/black"
    android:weightSum="6.2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_your_role_textview"
        android:text="Select your role"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_weight="0.2" />

    <ImageButton
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/app_th_hunter2"
        android:id="@+id/hunter_button"
        android:onClick="onClickHunter"
        android:layout_weight="3" />

    <ImageButton
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/app_th_treasure2"
        android:text="Treasure"
        android:id="@+id/treasure_button"
        android:onClick="onClickTreasure"
        android:layout_weight="3" />

</LinearLayout>
